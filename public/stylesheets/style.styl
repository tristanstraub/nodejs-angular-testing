$cellwidth = 32px
$cellheight = 32px

h1
  color: blue

.row
  display: block  

.cell
  width: $cellwidth
  height: $cellheight
  background-color: white
  display: block
  float: left
  border: 1px solid blue
  text-align: center
  cursor: pointer

  &.covered
    background-color: blue
    border: 1px solid lightblue

  .bomb
    display: block
    background-color: red
    width: 100%
    height: 100%
    line-height: 32px
  .empty
    margin-left: 0 auto
    line-height: 32px


// stolen micro-clearfix from http://nicolasgallagher.com/micro-clearfix-hack/
.cf:before,
.cf:after {
    content: " "; /* 1 */
    display: table; /* 2 */
}

.cf:after {
    clear: both;
}

/**
 * For IE 6/7 only
 * Include this rule to trigger hasLayout and contain floats.
 */
.cf {
    *zoom: 1;
}
